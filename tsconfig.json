{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "jsx": "preserve",
    "noEmit": true,
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "models/*": ["src/models/*"],
      "images/*": ["src/images/*"],
      "features/*": ["src/features/*"],
      "api/*": ["src/api/*"],
      "src/*": ["src/*"],
      "utils/*": ["src/utils/*"],
      "components/*": ["src/components/*"],
      "types": ["./node_modules/@lingui/macro/global", "node"]
    }
  },
  "exclude": ["node_modules", "build", "locale", "config"],
  "include": ["./src/**/*", "./typings/**/*.d.ts", "./testing/test-setup.ts"]
}
